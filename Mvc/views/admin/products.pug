extends ../layouts/detail-layout.pug


block content 
    if (action === 'edit' && action !=='undefined')
        div.alert.alert-success The product has been updated.
    if (action === 'delete' && action !=='undefined')
        div.alert.alert-danger The product has been deleted.
 
    if products.length > 0
        table.table.table-bordered 
            thead 
                tr 
                    th Image 
                    th Product Name 
                    th Price 
                    th 
                tbody 
                    each product in products 
                        tr 
                            td 
                                img(src=`/images/${product.imageUrl}` width='80', alt="")
                            td #{product.name}
                            td #{product.price} TL 
                            td 
                                a.btn.btn-primary.btn-sm(href=`/admin/products/${product.id}`) Edit
                                form(action="/admin/delete-product" method='Post')
                                    input(type="hidden" name='productid' value=`${product.id}`) 
                                    button(type="submit").btn.btn-danger.btn-sm Delete 
    else
        h1 No Product
    
