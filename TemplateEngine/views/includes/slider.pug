#mySlider.carousel.slide(data-bs-ride="carousel" style="padding-bottom: 20px;")
        .carousel-indicators
            button(type="button" data-bs-target="#mySlider" data-bs-slide-to="0" aria-current="true" aria-label="Slide 1").active
            button(type="button" data-bs-target="#mySlider" data-bs-slide-to="1" aria-label="Slide 2")
            button(type="button" data-bs-target="#mySlider" data-bs-slide-to="2" aria-label="Slide 3")
        .carousel-inner
            .carousel-item.active
              img(src="/images/mountains287618_1920.jpg" alt="...").d-block.w-100
            .carousel-item
              img(src="https://via.placeholder.com/960x420"  alt="...").d-block.w-
            .carousel-item
              img(src="https://via.placeholder.com/960x420" alt="...").d-block.w-
        button.carousel-control-prev(type="button" data-bs-target="#mySlider" data-bs-slide="prev")
            span.carousel-control-prev-icon(aria-hidden="true")
            span.visually-hidden Previous
        button.carousel-control-next(type="button" data-bs-target="#mySlider" data-bs-slide="next")
            span.carousel-control-next-icon( aria-hidden="true")
            span.visually-hidden Next